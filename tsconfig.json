{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* 模块解析模式 */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* 宽松模式设置 - 确保 GitHub Actions 编译通过 */
    "strict": false,                    // 关闭严格模式，允许一些不那么严谨的代码
    "noImplicitAny": false,             // 允许不标注具体的类型
    "strictNullChecks": false,          // 允许变量为 null 或 undefined
    "noUnusedLocals": false,            // 允许存在未使用的局部变量
    "noUnusedParameters": false,        // 允许存在未使用的函数参数
    "noFallthroughCasesInSwitch": true,
    
    /* 路径映射 - 配合 Vite 的 @ 符号使用 */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
